<% if (title) { %>
   <h1><%- title %></h1>
   <%} else {
       res.redirect('/')
   } %>
    
    <%- messages()%>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>

 <form class="account" action="/account/register" method="post"> 
    <p>**All fields are required</p>
    <div class="input-control">
    <label for="firstname">First Name:</label>
    <input type="text" id="firstname" name="account_firstname" size="10" required>
   </div>
   <div class="input-control">
    <label for="lastname">Last Name:</label>
    <input type="text" id="lastname" name="account_lastname"required>
   </div> 
    <div class="input-control">
    <label for="email">Email Address:</label>
    <input type="email" id="email" name="account_email" required>
    </div>
    <div class="input-control">
    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
   </div>
    <div><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number,
      and 1 special character.</i></div>
      <div id="pswdBtn">Show Password</div>
    <button type="submit">Register</button>
 </form>